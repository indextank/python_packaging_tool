[flake8]
# Maximum line length
max-line-length = 88

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .eggs,
    .mypy_cache,
    .pytest_cache,
    .tox,
    docs

# Ignore specific error codes
# E203: whitespace before ':' (conflicts with Black)
# E266: too many leading '#' for block comment
# E501: line too long (handled by Black)
# W503: line break before binary operator (conflicts with Black)
# W504: line break after binary operator
extend-ignore = E203, E266, E501, W503, W504

# Maximum complexity
max-complexity = 15

# Per-file ignores
per-file-ignores =
    __init__.py:F401,F403
    main.py:E402

# Show source code for each error
show-source = True

# Show error codes in output
show-pep8 = True

# Count errors
count = True

# Print total number of errors
statistics = True

# Format output
format = default

# Enable PyFlakes checks
enable-extensions = G

# Import order checking (if using flake8-isort)
# isort-show-traceback = True

# Docstring conventions (if using flake8-docstrings)
docstring-convention = google

# Require valid type hints (if using flake8-annotations)
# suppress-none-returning = True
# suppress-dummy-args = True
